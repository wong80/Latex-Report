%This file contains all the necessary style modifications to the document

% Vertical Spacing between math equations
\setlength{\jot}{10pt}

% Spacing between floats and text
\setlength{\intextsep}{10mm}

% Paragraph Spacing
\setlength{\parindent}{3em}
\setlength{\parskip}{0.5em}


% Variable Declaration
\def\faculty#1{\gdef\@faculty{#1}}
\def\department#1{\gdef\@department{#1}}
\def\module#1{\gdef\@module{#1}}
\def\coursework#1{\gdef\@coursework{#1}}
\def\coursecode#1{\gdef\@coursecode{#1}}
\def\name#1{\gdef\@name{#1}}
\def\studentID#1{\gdef\@studentID{#1}}
\def\convenor#1{\gdef\@convenor{#1}}


% Title Page Environment
\def\maketitle{

\begin{titlepage}

    \begin{figure}[H]
        
    \centering
    \includegraphics[width=0.75\textwidth]{UNM Logo.png}
    \end{figure}
    
    \begin{center}
        \vspace*{1cm}

        \textbf{\LARGE{\bf\@faculty}}\\
       
        \vspace{0.75cm}
        \textbf{\Large{\bf\@department}}\\
            
        \vspace{1.0cm}

        \textbf{\Large{\@module}}\\

        \vspace{0.5cm}
        \textbf{\Large{\@coursework}}\\

\vspace*{0.5cm}
        \textbf{\large{Course Code: \@coursecode}}       \\
\vspace*{1cm}

\begin{flushleft}
        \large{Student's Name}       : \@name\\
        
        Student's ID          : \@studentID\\
        
        Module Convenor: \@convenor

\end{flushleft}


            
   \end{center}
\end{titlepage}

}